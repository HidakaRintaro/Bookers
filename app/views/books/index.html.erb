<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Dstroy", book_path(book.id), method: :delete %></td>
    </tr>
  <% end %>
</table>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <div>
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <label for="book_body">Body</label><br>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>